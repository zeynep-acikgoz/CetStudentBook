@model IEnumerable<CetStudentBook.Models.Student>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>Students</h1>
<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>   
    </p>
       <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    ID
                    
                </th>
                <th>
                    Name
                    
                </th>
                <th>
                    
                    @Html.DisplayNameFor(model => model.First().Email)
                </th>
                <th>
                    
                    @Html.DisplayNameFor(model => model.First().DateOfBirth)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Email
                </td>
                <td>
                    @item.DateOfBirth.ToShortDateString()
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Edit</a>
                </td>
            </tr>
        }
        </tbody>    
        </table>


                