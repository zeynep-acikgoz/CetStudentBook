@{
}
<h1>Create Student</h1>
<form method="post" asp-action="Create"  >
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control mt-2" />
        <span asp-validation-for="Name" class="text-danger mt-2"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control mt-2" />
        <span asp-validation-for="Email" class="text-danger mt-2"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateOfBirth"></label>
        <input asp-for="DateOfBirth" class="form-control mt-2" type="date" />
        <span asp-validation-for="DateOfBirth" class="text-danger mt-2"></span>
    </div>
    <button type="submit" class="btn btn-success mt-4">Create</button>
    <button type="reset" class="btn btn-secondary mt-4">Cancel</button>
</form>
